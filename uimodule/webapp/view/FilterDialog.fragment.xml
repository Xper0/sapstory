<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
>
  <ViewSettingsDialog
    id="categoryFilterDialog"
    confirm="handleFilterDialogConfirm"
  >
    <filterItems>
      <ViewSettingsCustomItem
        text="Prise"
        key="Price"
      >
        <customControl>
          <l:VerticalLayout
            width="100%"
            class="sapUiContentPadding">
            <RangeSlider
              id="rangeSlider"
              width="100%"
              range="{/rangeSlider}"
              min="{/Min}"
              max="{/Max}"
              showAdvancedTooltip="true"
              class="sapUiSmallMarginTop"
              step="1"
              liveChange=".handleChange"/>
          </l:VerticalLayout>
        </customControl>
      </ViewSettingsCustomItem>
    </filterItems>
  </ViewSettingsDialog>
</core:FragmentDefinition>