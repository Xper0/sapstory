{
  "_version": "1.12.0",
  "sap.app": {
    "id": "com.storeapp.storeapp",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "0.0.1"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}"
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "flexEnabled": true,
    "dependencies": {
      "minUI5Version": "1.60",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {
        },
        "sap.f": {
        },
        "sap.ui.layout": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "com.storeapp.storeapp.i18n.i18n"
        }
      },
      "productses": {
        "type": "sap.ui.model.json.JSONModel",
        "uri": "../localService/metadata/Product.json"
      },
      "category": {
        "type": "sap.ui.model.json.JSONModel",
        "uri": "categories.json"

      }
    },

    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "async": true,
        "viewPath": "com.storeapp.storeapp.view",
        "controlAggregation": "pages",
        "controlId": "app",
        "clearControlAggregation": false
      },
      "routes": [
        {
          "name": "Home",
          "pattern": "",
          "target": [
            "TargetMainView"
          ]
        },
        {
          "pattern": "Products",
          "name": "Products",
          "target": "Products",
          "controlAggregation": "beginColumnPages"
        },
        {
          "pattern": "Products/detail/{detailId}",
          "name": "detail",
          "controlAggregation": "endColumnPages",
          "target": [
            "Products",
            "Detail"]
        }

          ],
      "targets": {
        "TargetMainView": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "viewId": "Home",
          "viewName": "Home",
          "viewLevel" : 1
        },
        "Products": {
          "viewId": "Products",
          "viewName": "Products",
          "viewType": "XML",
          "transition": "slide",
          "viewLevel" : 2
        },
        "Detail": {
          "viewType": "XML",
          "viewName": "Detail"
        }
      }
    },
    "rootView": {
      "viewName": "com.storeapp.storeapp.view.MainView",
      "type": "XML",
      "async": true,
      "id": "app"
    }
  }
}
